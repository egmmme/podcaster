{
  "name": "podcast-app",
  "version": "1.0.1",
  "type": "module",
  "scripts": {
    "dev": "webpack serve --mode development",
    "prod": "webpack serve --mode production",
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:threshold": "jest --coverage --coverageThreshold=\"{\\\"global\\\":{\\\"branches\\\":70,\\\"functions\\\":70,\\\"lines\\\":70,\\\"statements\\\":70}}\"",
    "type-check": "tsc --noEmit",
    "analyze": "cross-env ANALYZE=true webpack --mode production",
    "analyze:dev": "cross-env ANALYZE=true webpack --mode development",
    "format": "prettier --write src/**/*.{ts,tsx,css}",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "lint:css": "stylelint \"src/**/*.css\"",
    "lint:css:fix": "stylelint \"src/**/*.css\" --fix",
    "lint:all": "npm run lint && npm run lint:css",
    "lint:all:fix": "npm run lint:fix && npm run lint:css:fix",
    "validate": "npm run type-check && npm run lint:all && npm run test"
  },
  "dependencies": {
    "dompurify": "^3.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/dompurify": "^3.0.5",
    "@types/jest": "^29.2.5",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "compression-webpack-plugin": "^11.1.0",
    "cross-env": "^10.1.0",
    "css-loader": "^6.7.3",
    "eslint": "^8.33.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "html-webpack-plugin": "^5.5.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "prettier": "^2.8.3",
    "style-loader": "^3.3.1",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-order": "^7.0.0",
    "ts-jest": "^29.0.5",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.5",
    "webpack": "^5.75.0",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.7.4"
  }
}
